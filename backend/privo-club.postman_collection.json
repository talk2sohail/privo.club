{
	"info": {
		"_postman_id": "privo-club-backend-api",
		"name": "Privo.club Backend API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "dev-token",
			"type": "string",
			"description": "Bearer token for authentication. Use 'dev-token' for local dev mock."
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{authToken}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Circles",
