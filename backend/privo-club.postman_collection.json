							"mode": "raw",
							"raw": "{\n    \"name\": \"My New Circle\",\n    \"description\": \"A test circle created via API\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/circles",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"circles"
							]
