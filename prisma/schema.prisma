// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // App specific relationships
  ownedCircles  Circle[]  @relation("CircleOwner")
  memberships   CircleMember[]
  invitesSent      Invite[]  @relation("InviteSender")
  rsvpResponses    RSVP[]
  feedItems        EventFeedItem[]
  mediaUploads     MediaItem[]
  createdInviteLinks CircleInviteLink[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Circle {
  id                  String   @id @default(cuid())
  name                String
  description         String?
  inviteCode          String   @unique @default(cuid())
  isInviteLinkEnabled Boolean  @default(true)
  ownerId             String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  owner       User     @relation("CircleOwner", fields: [ownerId], references: [id])
  members     CircleMember[]
  invites     Invite[]
  inviteLinks CircleInviteLink[]
}

model CircleMember {
  id        String   @id @default(cuid())
  circleId  String
  userId    String
  role      String   @default("MEMBER") // OWNER, ADMIN, MEMBER
  status    String   @default("ACTIVE") // ACTIVE, PENDING
  joinedAt  DateTime @default(now())

  circle    Circle   @relation(fields: [circleId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([circleId, userId])
}

model Invite {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String?
  eventDate   DateTime
  senderId    String
  circleId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sender      User     @relation("InviteSender", fields: [senderId], references: [id])
  circle      Circle?  @relation(fields: [circleId], references: [id])
  rsvps       RSVP[]
  feedItems   EventFeedItem[]
  mediaItems  MediaItem[]
}

model RSVP {
  id          String   @id @default(cuid())
  inviteId    String
  userId      String
  status      String   // YES, NO, MAYBE
  guestCount  Int      @default(1)
  dietary     String?
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  invite      Invite   @relation(fields: [inviteId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([inviteId, userId])
}

model EventFeedItem {
  id        String   @id @default(cuid())
  inviteId  String
  userId    String
  content   String   @db.Text
  type      String   @default("UPDATE") // UPDATE, CHAT
  createdAt DateTime @default(now())

  invite    Invite   @relation(fields: [inviteId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MediaItem {
  id        String   @id @default(cuid())
  inviteId  String
  userId    String
  url       String
  type      String   // IMAGE, VIDEO
  caption   String?
  createdAt DateTime @default(now())

  invite    Invite   @relation(fields: [inviteId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CircleInviteLink {
  id        String    @id @default(cuid())
  circleId  String
  code      String    @unique
  maxUses   Int
  usedCount Int       @default(0)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  creatorId String

  circle  Circle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  creator User   @relation(fields: [creatorId], references: [id])
}
